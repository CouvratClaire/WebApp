{% extends "layout.html.jinja2" %}
{% block body %}



          <!-- Icon Cards-->
          <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <img src="{{ url_for("static", filename="img/appointment.png") }}" alt="Create Mission" height="42" width="42">
                  </div>
                  <div class="mr-5">Créer une nouvelle mission</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url_for("generate_for_new_mission") }}">
                  <span class="float-left">Ajouter</span>
                  <span class="float-right">
                    <img src="{{ url_for("static", filename="img/appointment_black.png") }}" alt="Create" height="22" width="22">
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <img src="{{ url_for("static", filename="img/achievement.png") }}" alt="Delete" height="42" width="42">
                  </div>
                  <div class="mr-5">Voir les missions</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url_for('gerer_les_missions')}}">
                  <span class="float-left">Voir</span>
                  <span class="float-right">
                    <img src="{{ url_for("static", filename="img/achievement_black.png") }}" alt="Delete" height="22" width="22">
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <img src="{{ url_for("static", filename="img/new-user.png") }}" alt="Nouveau" height="42" width="42">
                  </div>
                  <div class="mr-5">Ajouter un ingénieur d'étude</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url_for('generate_for_new_employee')}}">
                  <span class="float-left">Ajouter</span>
                  <span class="float-right">
                    <img src="{{ url_for("static", filename="img/new-user_black.png") }}" alt="Voeux" height="22" width="22">
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-danger o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <img src="{{ url_for("static", filename="img/remove-user.png") }}" alt="Delete User" height="42" width="42">
                  </div>
                  <div class="mr-5">Voir les ingénieurs d'étude</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ url_for('gerer_les_ingenieurs_d_etude') }}">
                  <span class="float-left">Voir</span>
                  <span class="float-right">
                    <img src="{{ url_for("static", filename="img/remove-user_black.png") }}" alt="Delete User" height="22" width="22">
                  </span>
                </a>
              </div>
            </div>
          </div>




          <!-- DataTables Example -->
          <div class="card mb-3">
            <div class="card-header">
              <img src="{{ url_for("static", filename="img/project-management_black.png") }}" alt="Missions" height="22" width="22">
              Missions</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Description</th>
                      <th>Etat</th>
                      <th>Attribuer</th>
                      <th>Clore</th>
                      <th>Supprimer</th>
                    </tr>
                  </thead>

                  <tbody>
                    {% for project in projects %}
    <tr>
        <td> {{ project.name }}</td>
        <td> {{ project.description }} </td>
        <td> {% if project.state == 1 %} affectée  {% endif %} {% if project.state == 0 %}  à affecter  {% endif %} {% if project.state == -1 %} fermée  {% endif %}</td>
        <td> {% if project.state == 0 %} <a href="{{ url_for("update_mission", project_id=project.id )}}"> Affecter</a> {% endif %} </td>
        <td> {% if project.state != -1 %} <a href="{{ url_for("clore_mission", project_id=project.id) }}"> Clore</a> {% endif %}</td>
        <td>  <a href="{{ url_for("supress_mission", project_id=project.id) }}"> Supprimer</a> </td>

    </tr>
                    {% endfor %}

                  </tbody>
                </table>
              </div>
            </div>

          </div>



     <div class="card mb-3">
            <div class="card-header">
              <img src="{{ url_for("static", filename="img/coder-head_black.png") }}" alt="Voeux" height="22" width="22">
              Ingénieurs d'étude</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Prénom</th>

                    </tr>
                  </thead>

                  <tbody>
                    {% for employee in employees %}
    <tr>
        <td> {{ employee.lastname }}</td>
        <td> {{ employee.firstname }} </td>


    </tr>
                    {% endfor %}

                  </tbody>
                </table>
              </div>
            </div>

          </div>






{% endblock %}
        <!-- /.container-fluid -->

