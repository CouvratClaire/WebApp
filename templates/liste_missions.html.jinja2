{% extends "layout2.html.jinja2" %}

{% block body %}

            <div class="card-header">
              <img src="{{ url_for("static", filename="img/project-management_black.png") }}" alt="Accueil" height="22" width="22">
              Missions</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Description</th>
                      <th>Compétences nécessaires</th>
                    </tr>
                  </thead>

                  <tbody>
                    {% for project in projects %}
    <tr>
        <td> {{ project.name }}</td>
        <td> {{ project.description }} </td>
        <td> {% for competence in project.competences %}
            {{ competence.name }}
            {% endfor %}</td>

    </tr>
                    {% endfor %}

                  </tbody>
                </table>
              </div>
            </div>
{% endblock %}